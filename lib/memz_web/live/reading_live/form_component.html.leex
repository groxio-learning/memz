<h2><%= @title %></h2>

<%= f = form_for @changeset, "#",
  id: "reading-form",
  phx_target: @myself,
  phx_change: "validate",
  phx_submit: "save" %>

  <%= label f, :name %>
  <%= text_input f, :name %>
  <%= error_tag f, :name %>

  <%= label f, :passage %>
  <%= textarea f, :passage %>
  <%= error_tag f, :passage %>

  <%= label f, :steps %>
  <%= number_input f, :steps %>
  <%= error_tag f, :steps %>

  <%= submit "Save", phx_disable_with: "Saving..." %>
</form>
